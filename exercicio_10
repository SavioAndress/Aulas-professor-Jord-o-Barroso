// feito com NPM readline-sync
const readline =require ("readline-sync")

console.log('Opções: \n 1- Somar\n 2- Subtrair\n 3- Sair')

opcao = readline.question('Digite a opcao: ')
selecao = parseInt(opcao)
switch(selecao){
  case 1:
    numero1 = readline.question('Digite o primeiro numero: ')
    numero1 = parseInt(numero1)
    numero2 = readline.question('Digite o segundo numero: ')
    numero2 = parseInt(numero2)
    console.log (numero1 + numero2)
    break;
  case 2:
    numero1 = readline.question('Digite o primeiro numero: ')
    numero1 = parseInt(numero1)
    numero2 = readline.question('Digite o segundo numero: ')
    numero2 = parseInt(numero2)
    console.log (numero1 - numero2);
    break;
  case 3:
    console.log('Saindo.')
    break;
  default:
    console.log('Opção inválida')  
    break;
  }
